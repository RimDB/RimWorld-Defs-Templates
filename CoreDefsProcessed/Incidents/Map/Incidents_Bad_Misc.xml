    <label>alphabeavers</label>
    <workerClass>IncidentWorker_Alphabeavers</workerClass>
    <targetType>BaseMap</targetType>
    <baseChance>1.0</baseChance>
    <minRefireDays>8</minRefireDays>
    <allowedBiomes>
      <li ListIndex="0">BorealForest</li>
