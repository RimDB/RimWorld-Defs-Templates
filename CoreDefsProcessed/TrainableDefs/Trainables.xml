<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <TrainableDef>
    <defName>Obedience</defName>
    <label>obedience</label>
    <description>The animal can be assigned a master who it will follow and defend.</description>
    <difficulty>100</difficulty>
    <tags>
      <li ListIndex="0">Basic</li>
    </tags>
    <defaultTrainable>true</defaultTrainable>
    <requiredTrainableIntelligence>Simple</requiredTrainableIntelligence>
    <steps>1</steps>
    <listPriority>1000</listPriority>
    <icon>UI/Icons/Trainables/Obedience</icon>
  </TrainableDef>
  <TrainableDef>
    <defName>Release</defName>
    <label>release</label>
    <description>The animal can be released to attack distant targets instead of just defending the master.</description>
    <difficulty>100</difficulty>
    <prerequisites>
      <li ListIndex="0">Obedience</li>
    </prerequisites>
    <tags>
      <li ListIndex="0">Combat</li>
    </tags>
    <defaultTrainable>true</defaultTrainable>
    <requiredTrainableIntelligence>Intermediate</requiredTrainableIntelligence>
    <steps>2</steps>
    <listPriority>800</listPriority>
    <icon>UI/Icons/Trainables/Release</icon>
  </TrainableDef>
  <TrainableDef>
    <defName>Rescue</defName>
    <label>rescue</label>
    <description>The animal will rescue wounded allies and drag them to safety.</description>
    <difficulty>200</difficulty>
    <minBodySize>0.65</minBodySize>
    <prerequisites>
      <li ListIndex="0">Obedience</li>
    </prerequisites>
    <tags>
      <li ListIndex="0">Combat</li>
      <li ListIndex="1">Help</li>
    </tags>
    <defaultTrainable>true</defaultTrainable>
    <requiredTrainableIntelligence>Advanced</requiredTrainableIntelligence>
    <steps>2</steps>
    <listPriority>600</listPriority>
    <icon>UI/Icons/Trainables/Rescue</icon>
  </TrainableDef>
  <TrainableDef>
    <defName>Haul</defName>
    <label>haul</label>
    <description>The animal will randomly haul items from time to time (though it can't be directed to haul specific items).</description>
    <difficulty>300</difficulty>
    <minBodySize>0.40</minBodySize>
    <prerequisites>
      <li ListIndex="0">Obedience</li>
    </prerequisites>
    <tags>
      <li ListIndex="0">Work</li>
    </tags>
    <defaultTrainable>true</defaultTrainable>
    <requiredTrainableIntelligence>Advanced</requiredTrainableIntelligence>
    <steps>7</steps>
    <listPriority>400</listPriority>
    <icon>UI/Icons/Trainables/Haul</icon>
  </TrainableDef>
</Defs>