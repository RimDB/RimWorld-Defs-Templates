      <drawSize>1.9</drawSize>
    </graphicData>
    <drawerType>RealtimeOnly</drawerType>
    <drawOffscreen>true</drawOffscreen>
    <skyfaller>
      <ticksToImpactRange>
        <min>-40</min>
        <max>-15</max>
      </ticksToImpactRange>
