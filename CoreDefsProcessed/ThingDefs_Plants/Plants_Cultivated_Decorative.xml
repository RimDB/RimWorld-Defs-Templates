<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>PlantRose</defName>
    <label>rose</label>
    <description>A beautiful cultivated flower, symbolic of love and romance since ancient times.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>14</Beauty>
      <Flammability>0.8</Flammability>
    </statBases>
    <pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
    <altitudeLayer>Item</altitudeLayer>
    <thingClass>Plant</thingClass>
    <category>Plant</category>
    <tickerType>Long</tickerType>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <texPath>Things/Plant/Rose</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>CutoutPlant</shaderType>
    </graphicData>
    <drawerType>MapMeshOnly</drawerType>
    <selectable>true</selectable>
    <neverMultiSelect>True</neverMultiSelect>
    <ingestible>
      <foodType>Plant</foodType>
      <nutrition>0.05</nutrition>
      <preferability>RawBad</preferability>
    </ingestible>
    <plant>
      <sowTags>
        <li ListIndex="0">Ground</li>
        <li ListIndex="1">Decorative</li>
      </sowTags>
      <sowWork>400</sowWork>
      <harvestWork>190</harvestWork>
      <harvestTag>Standard</harvestTag>
      <soundHarvesting>Harvest_Standard</soundHarvesting>
      <soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
      <growDays>1.5</growDays>
      <lifespanFraction>8</lifespanFraction>
      <growMinGlow>0.3</growMinGlow>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>1.0</fertilitySensitivity>
      <reproduces>false</reproduces>
      <dieIfLeafless>true</dieIfLeafless>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
