            <li ListIndex="0">MechSerumHealer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li ListIndex="0">MechSerumHealer</li>
      </thingDefs>
