    </skillNeedFactors>
    <capacityFactors>
      <li ListIndex="0">
        <capacity>Sight</capacity>
        <weight>0.7</weight>
        <max>1.4</max>
      </li>
      <li ListIndex="1">
        <capacity>Manipulation</capacity>
        <weight>1</weight>
        <max>1.4</max>
      </li>
    </capacityFactors>
    <postProcessCurve>
      <points>
        <li ListIndex="0">(0, 0)</li>
        <li ListIndex="1">(1.0, 1.0)</li>
        <li ListIndex="2">(2.0, 1.5)</li>
        <li ListIndex="3">(4.0, 2.0)</li>
      </points>
    </postProcessCurve>
  </StatDef>
