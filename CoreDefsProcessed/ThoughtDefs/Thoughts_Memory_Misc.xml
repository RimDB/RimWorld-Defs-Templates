<Defs>
  <ThoughtDef>
    <defName>AteWithoutTable</defName>
    <stages>
      <li ListIndex="0">
        <label>ate without table</label>
        <description>I had to eat a meal off the ground. Can't we get a table around here?</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
    <stackLimit>1</stackLimit>
    <durationDays>0.5</durationDays>
  </ThoughtDef>
  <ThoughtDef>
    <defName>SleepDisturbed</defName>
    <stages>
      <li ListIndex="0">
        <label>disturbed sleep</label>
        <description>I was disturbed during sleep by people moving around nearby. A private room would solve this.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
    <stackLimit>4</stackLimit>
    <stackedEffectMultiplier>0.4</stackedEffectMultiplier>
    <durationDays>0.5</durationDays>
